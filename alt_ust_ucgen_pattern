#include <stdio.h>
#include<math.h>
#include<stdlib.h>
int main () {
int n , i , j;
printf("elmas yaricapini(satir sayi gir)");
scanf("%d" , &n);
//UST UCGEN
for(i=1;i<=n;i++)
{
    //BOSLUKLAR
    for(j=1;j<=n-i;j++)
    {
        printf(" ");
    }

    //YILDIZLARI YAZDIRIR
    for(j=1;j<=2 * i - 1;j++)
    {

        printf("*");
    }
    printf("\n");
}


for(i=n-1;i>=1;i--)
{
    //BOSLUKLAR
    for(j=1;j<=n-i;j++)
    {

        printf(" ");
    }
    for(j=1;j<= 2 * i -1;j++)

    {
        printf("*");
    }
    printf("\n");
}




     return 0;
}

